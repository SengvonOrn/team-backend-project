generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  CUSTOMER
}
enum Status {
  ACTIVE
  INACTIVE
  BANNED
}



model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?  @unique
  name      String?
  password  String?
  image     String?
  role      Role     @default(USER)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  profileImage ProfileImage?
  customers    Customer[]
  comments     Comment[]
  cartItems    CartItem[]
  locations    UserLocation[]   // ✅ ADDED
  store         Store?

  reviews         Review[]
  wishlists       Wishlist[]

  @@map("user")
}


////////////////////
/// PROFILE IMAGE
////////////////////

model ProfileImage {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  profile   String? // full image URL
  thumbnail String? // thumbnail URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

}

////////////////////
/// CUSTOMER
////////////////////

model Customer {
  id        String   @id @default(uuid())
  userId    Int      @unique
  email     String   @unique
  username  String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("customers")
}




//==========
// UserLocations
//==========
model UserLocation {
  id          Int      @id @default(autoincrement())
  userId      Int
  label       String?  // e.g. "Home", "Office"
  addressLine String
  city        String?
  state       String?
  country     String
  postalCode  String?
  latitude    Float?
  longitude   Float?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]



  @@index([userId])
  @@map("user_locations")
}



////////////////////
/// STORE
////////////////////







model Store {
  id          String   @id @default(uuid())
  userId      Int      @unique
  name        String
  description String?
  address     String?
  city        String?
  state       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  products    Product[]
  images      StoreImage[] 
  

  @@index([userId])
  @@map("stores")
}


model StoreImage {
  id          String   @id @default(uuid())
  storeId     String
  imageUrl    String   
  imageType   ImageType 
  cloudinaryPublicId String? 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Relations
  store       Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  @@unique([storeId, imageType]) 
  @@index([storeId])
  @@map("store_images")
}

enum ImageType {
  LOGO
  BANNER
  GALLERY
}




////////////////////
/// PRODUCT Product → ProductVariant → OrderItem → Order
////////////////////

enum ProductImageType {
  MAIN
  GALLERY
  THUMBNAIL
}


model Product {
  id          String   @id @default(uuid())
  storeId     String
  name        String
  slug        String   @unique
  description String?
  brand       String?
  category    String?
  status      String   @default("DRAFT")
  isDeleted   Boolean  @default(false)
  deletedAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  store       Store              @relation(fields: [storeId], references: [id], onDelete: Cascade)
  variants    ProductVariant[]
  images      ProductImage[]
  attributes  ProductAttribute[]
  comments    Comment[]

  reviews     Review[]
  wishlists       Wishlist[]
  

  @@index([storeId])
  @@index([isDeleted, deletedAt]) 
  @@index([storeId, isDeleted, status])
  @@index([slug])
  @@map("products")
}







////////////////////
/// PRODUCT VARIANT
////////////////////

model ProductVariant {
  id              String   @id @default(uuid())
  productId       String
  name            String
  price           Float
  compareAtPrice  Float?
  stock           Int
  sku             String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  cartItems       CartItem[]
  orderItems      OrderItem[]
  inventory       Inventory?

  @@index([productId])
  @@map("product_variants")
}




////////////////////
/// PRODUCT IMAGE
////////////////////



/////////////////////
/// PRODUCT IMAGE
/////////////////////


model ProductImage {
  id        String   @id @default(uuid())
  productId           String
  imageUrl            String
  altText             String?
  imageType          ProductImageType @default(GALLERY)
  position            Int    @default(0)
  cloudinaryPublicId  String?
  width               Int?
  height              Int?
  fileSize           Int?
  mimetype            String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, imageType])


  
  @@index([productId])
  @@map("product_images")

}
/// PRODUCT ATTRIBUTE
////////////////////

model ProductAttribute {
  id             String   @id @default(uuid())
  productId      String
  attributeName  String
  attributeValue String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  @@index([productId])
  @@map("product_attributes")
}

model Review {
  id              String   @id @default(uuid())
  productId       String
  userId          Int
  rating          Int      // 1-5 stars
  title           String?
  comment         String?
  helpful         Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId])
  @@index([productId])
  @@index([userId])
  @@map("reviews")
}


model Wishlist {
  id              String   @id @default(uuid())
  userId          Int
  productId       String
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@map("wishlists")
}



////////////////////
/// ORDER
////////////////////




model Inventory {
  id                    String   @id @default(uuid())
  productVariantId      String   @unique
  quantityInStock       Int
  quantityReserved      Int      @default(0)
  reorderLevel          Int      @default(10)
  lastRestockDate       DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  productVariant        ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)

  @@map("inventories")
}


model Order {
  id              String   @id @default(uuid())
  customerId      String
  locationId      Int?
  orderAmount     Float
  shippingCost    Float?
  discount        Float?
  totalAmount     Float
  paymentStatus   String   @default("pending")
  orderStatus     String   @default("pending")
  shippingAddress String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  customer        Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location        UserLocation?  @relation(fields: [locationId], references: [id])
  orderItems      OrderItem[]
  payments        Payment[]
  shipment        Shipment?
  invoice         Invoice?
  transaction     Transaction?

  @@index([customerId])
  @@index([locationId])
  @@map("orders")
}



////////////////////
/// ORDER ITEM
////////////////////

model OrderItem {
  id                    String   @id @default(uuid())
  orderId               String
  productVariantId      String
  quantity              Int
  price                 Float
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  order                 Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productVariant        ProductVariant @relation(fields: [productVariantId], references: [id])

  @@index([orderId])
  @@index([productVariantId])
  @@map("order_items")
}


////////////////////
/// TRANSACTION
////////////////////

model Transaction {
  id              String   @id @default(uuid())
  orderId         String   @unique
  customerId      String
  amount          Float
  transactionId   String   @unique
  status          String   @default("pending")
  paymentMethodId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  order         Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  paymentMethod PaymentMethod? @relation(fields: [paymentMethodId], references: [id])

  @@index([customerId])
  @@index([paymentMethodId])
  @@map("transactions")
}

////////////////////
/// PAYMENT METHOD
////////////////////

model PaymentMethod {
  id              String   @id @default(uuid())
  name            String
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  payments        Payment[]
  transactions    Transaction[]

  @@map("payment_methods")
}

////////////////////
/// PAYMENT
////////////////////

model Payment {
  id                    String   @id @default(uuid())
  orderId               String
  paymentMethodId       String
  amount                Float
  paymentDate           DateTime @default(now())
  status                String   @default("pending")
  transactionRef        String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  order                 Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  paymentMethod         PaymentMethod  @relation(fields: [paymentMethodId], references: [id])

  @@index([orderId])
  @@index([paymentMethodId])
  @@map("payments")
}

////////////////////
/// SHIPMENT
////////////////////

model Shipment {
  id              String   @id @default(uuid())
  orderId         String   @unique
  trackingNumber  String   @unique
  shippingCompany String
  deliveryStatus  String   @default("pending")
  deliveryDate    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("shipments")
}

////////////////////
/// INVOICE
////////////////////

model Invoice {
  id            String   @id @default(uuid())
  orderId       String   @unique
  invoiceNumber String   @unique
  issueDate     DateTime @default(now())
  totalAmount   Float
  pdfUrl        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)


  @@map("invoices")

}

////////////////////
/// CART ITEM
////////////////////

model CartItem {
  id               String   @id @default(uuid())
  productVariantId String
  userId           Int
  quantity         Int
  price            Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([productVariantId])
  @@map("cart_items")
}

////////////////////
/// COMMENT
////////////////////

model Comment {
  id        String   @id @default(uuid())
  userId    Int
  productId String
  title     String?
  comment   String
  rating    Int?     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([productId])
  @@map("comments")
}
