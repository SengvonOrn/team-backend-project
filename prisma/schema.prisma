generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  CUSTOMER
}
enum Status {
  ACTIVE
  INACTIVE
  BANNED
}



model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?  @unique
  name      String?
  password  String?
  image     String?
  role      Role     @default(USER)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profileImage ProfileImage?
  customers    Customer[]
  comments     Comment[]
  cartItems    CartItem[]
  locations    UserLocation[]   // ✅ ADDED
  store         Store?

  @@map("user")
}


////////////////////
/// PROFILE IMAGE
////////////////////

model ProfileImage {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  profile   String? // full image URL
  thumbnail String? // thumbnail URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

////////////////////
/// CUSTOMER
////////////////////

model Customer {
  id        String   @id @default(uuid())
  userId    Int      @unique
  email     String   @unique
  username  String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  orders Order[]
}




//==========
// UserLocations
//==========
model UserLocation {
  id          Int      @id @default(autoincrement())
  userId      Int
  label       String?  // e.g. "Home", "Office"
  addressLine String
  city        String?
  state       String?
  country     String
  postalCode  String?
  latitude    Float?
  longitude   Float?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]
  @@index([userId])
}



////////////////////
/// STORE
////////////////////



model Store {
  id          String   @id @default(uuid())
  userId      Int      @unique
  name        String
  description String?
  address     String?
  city        String?
  state       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  products    Product[]
}


////////////////////
/// PRODUCT Product → ProductVariant → OrderItem → Order
////////////////////



model Product {
  id          String   @id @default(uuid())
  storeId     String
  name        String
  slug        String   @unique
  description String?
  brand       String?
  category    String?
  status      String   @default("draft")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  store       Store              @relation(fields: [storeId], references: [id])
  variants    ProductVariant[]
  images      ProductImage[]
  attributes  ProductAttribute[]
  comments    Comment[]
}







////////////////////
/// PRODUCT VARIANT
////////////////////

model ProductVariant {
  id        String   @id @default(uuid())
  productId String
  name      String
  price     Float
  stock     Int
  sku       String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product    Product     @relation(fields: [productId], references: [id])
  cartItems CartItem[]
  orderItems OrderItem[]
}




////////////////////
/// PRODUCT IMAGE
////////////////////

model ProductImage {
  id        String   @id @default(uuid())
  productId String
  imageUrl  String
  altText   String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id])
}

////////////////////
/// PRODUCT ATTRIBUTE
////////////////////

model ProductAttribute {
  id             String   @id @default(uuid())
  productId      String
  attributeName  String
  attributeValue String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  product Product @relation(fields: [productId], references: [id])
}

////////////////////
/// ORDER
////////////////////



model Order {
  id              String   @id @default(uuid())
  customerId      String
  locationId      Int?
  orderAmount     Float
  shippingCost    Float?
  discount        Float?
  totalAmount     Float
  paymentStatus   String   @default("pending")
  orderStatus     String   @default("pending")
  shippingAddress String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  customer Customer      @relation(fields: [customerId], references: [id])
  location UserLocation? @relation(fields: [locationId], references: [id])

  orderItems  OrderItem[]
  payments    Payment[]
  shipment    Shipment?
  invoice     Invoice?
  transaction Transaction?
}



////////////////////
/// ORDER ITEM
////////////////////

model OrderItem {
  id               String   @id @default(uuid())
  orderId          String
  productVariantId String
  quantity         Int
  price            Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  order          Order          @relation(fields: [orderId], references: [id])
  productVariant ProductVariant @relation(fields: [productVariantId], references: [id])
}


////////////////////
/// TRANSACTION
////////////////////

model Transaction {
  id              String   @id @default(uuid())
  orderId         String   @unique
  customerId      String
  amount          Float
  transactionId   String   @unique
  status          String   @default("pending")
  paymentMethodId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  order         Order          @relation(fields: [orderId], references: [id])
  paymentMethod PaymentMethod? @relation(fields: [paymentMethodId], references: [id])
}

////////////////////
/// PAYMENT METHOD
////////////////////

model PaymentMethod {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  payments     Payment[]
  transactions Transaction[]
}

////////////////////
/// PAYMENT
////////////////////

model Payment {
  id              String   @id @default(uuid())
  orderId         String
  paymentMethodId String
  amount          Float
  paymentDate     DateTime @default(now())
  status          String   @default("pending")
  transactionRef  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  order         Order         @relation(fields: [orderId], references: [id])
  paymentMethod PaymentMethod @relation(fields: [paymentMethodId], references: [id])
}

////////////////////
/// SHIPMENT
////////////////////

model Shipment {
  id              String   @id @default(uuid())
  orderId         String   @unique
  trackingNumber  String   @unique
  shippingCompany String
  deliveryStatus  String   @default("pending")
  deliveryDate    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}

////////////////////
/// INVOICE
////////////////////

model Invoice {
  id            String   @id @default(uuid())
  orderId       String   @unique
  invoiceNumber String   @unique
  issueDate     DateTime @default(now())
  totalAmount   Float
  pdfUrl        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}

////////////////////
/// CART ITEM
////////////////////

model CartItem {
  id               String   @id @default(uuid())
  productVariantId String
  userId           Int
  quantity         Int
  price            Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id])
  user           User           @relation(fields: [userId], references: [id])
}

////////////////////
/// COMMENT
////////////////////

model Comment {
  id        String   @id @default(uuid())
  userId    Int
  productId String
  title     String?
  comment   String
  rating    Int?     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
